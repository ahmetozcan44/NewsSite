@using FormsAuthenticationExtensions

﻿<ul class="nav navbar-nav" style="float:right;">
    @if (User.Identity.IsAuthenticated)
    {
        <li><a href="@Url.Action("UserProfile","User")">@NewsSite.Web.Framework.Membership.CustomMembership.CurrentUser().RealName</a></li>
        <li>@Html.ActionLink("Çıkış", "LogOff", "Account")</li>
        if (User.IsInRole("Admin"))
        {
            <li>@Html.ActionLink("Admin", "Index", "Dashboard", new { area = "Admin" }, null)</li>
        }
    }
    else
    {
        <li>@Html.ActionLink("Kayıt Ol", "Register", "Account")</li>
        <li>@Html.ActionLink("Giriş", "Login", "Account")</li>
    }
</ul>